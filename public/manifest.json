{
  "short_name": "NCS CBT",
  "name": "Nigeria Customs Service CBT System",
  "description": "Computer Based Test System for Nigeria Customs Service Recruitment",
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "logo192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any maskable"
    },
    {
      "src": "logo512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any maskable"
    }
  ],
  "start_url": ".",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#1a237e",
  "background_color": "#f5f5f5",
  "prefer_related_applications": false,
  "categories": ["education", "productivity"],
  "screenshots": [
    {
      "src": "screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "NCS CBT System Dashboard"
    },
    {
      "src": "screenshot2.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Test Interface"
    }
  ],
  "shortcuts": [
    {
      "name": "Start New Test",
      "short_name": "New Test",
      "description": "Begin a new examination",
      "url": "/login",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "View Results",
      "short_name": "Results",
      "description": "Check your test results",
      "url": "/results",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  "iarc_rating": "IARC-All",
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://ncs-cbt.customs.gov.ng/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+ncs",
      "url": "/?protocol=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "auto"
  },
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "application/pdf": [".pdf"]
      },
      "icons": [
        {
          "src": "/icons/pdf-icon.png",
          "sizes": "48x48"
        }
      ],
      "launch_type": "single-client"
    }
  ]
